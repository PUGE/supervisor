/**index.wxss**/
.userinfo {
  display: flex;
  flex-direction: column;
  align-items: center;
}

.userinfo-avatar {
  width: 128rpx;
  height: 128rpx;
  margin: 20rpx;
  border-radius: 50%;
}

.userinfo-nickname {
  color: #aaa;
}

.usermotto {
  margin-top: 200px;
}

.add {
  position: fixed;
  right: 15px;
  bottom: 30px;
  width: 50px;
  height: 50px;
}
.add image {
  width: 100%;
  height: 100%;
}

.server-item {
  background-color: #fffff3;
  border: 1px solid #dddddd;
  box-shadow: 1px 1px 5px #ddd;
  border-radius: 10rpx;
  padding: 15rpx;
  margin-bottom: 15rpx;
  
  color: #575757;
}

.server-item .ip {
  color: #333;
  font-size: 14px;
}